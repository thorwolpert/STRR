{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://strr.gov.bc.ca/.well_known/schemas/strata_hotel_registration",
  "type": "object",
  "title": "Strata Hotel Registration",
  "definitions": {
    "contact": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string"
        },
        "middleName": {
          "type": "string"
        },
        "lastName": {
          "type": "string"
        },
        "phoneNumber": {
          "type": "string"
        },
        "phoneCountryCode": {
          "type": "string"
        },
        "extension": {
          "type": "string"
        },
        "faxNumber": {
          "type": "string"
        },
        "emailAddress": {
          "type": "string",
          "format": "email"
        },
        "jobTitle": {
          "type": "string"
        }
      },
      "required": [
        "lastName",
        "emailAddress",
        "phoneNumber"
      ]
    },
    "brand": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "website": {
          "type": "string"
        }
      },
      "required": [
        "name",
        "website"
      ]
    },
    "unitListings": {
      "type": "object",
      "properties": {
        "primary": {
          "type": "string",
          "description": "List of unit numbers for primary building"
        },
        "additional": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Lists of unit numbers for each additional building"
        }
      }
    },
    "businessDetails": {
      "type": "object",
      "properties": {
        "legalName": {
          "type": "string"
        },
        "homeJurisdiction": {
          "type": "string"
        },
        "businessNumber": {
          "type": "string"
        },
        "mailingAddress": {
          "$ref": "https://strr.gov.bc.ca/.well_known/schemas/address"
        },
        "registeredOfficeOrAttorneyForServiceDetails": {
          "attorneyName": {
            "type": "string"
          },
          "mailingAddress": {
            "$ref": "https://strr.gov.bc.ca/.well_known/schemas/address"
          }
        }
      },
      "required": [
        "legalName",
        "homeJurisdiction",
        "mailingAddress"
      ]
    }
  },
  "properties": {
    "completingParty": {
      "$ref": "#/definitions/contact"
    },
    "strataHotelRepresentatives": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/contact"
      }
    },
    "businessDetails": {
      "$ref": "#/definitions/businessDetails"
    },
    "strataHotelDetails": {
      "type": "object",
      "properties": {
        "brand": {
          "$ref": "#/definitions/brand"
        },
        "location": {
          "$ref": "https://strr.gov.bc.ca/.well_known/schemas/address"
        },
        "numberOfUnits": {
          "type": "integer"
        },
        "buildings": {
          "type": "array",
          "items": {
            "$ref": "https://strr.gov.bc.ca/.well_known/schemas/address"
          }
        },
        "category": {
          "type": "string",
          "enum": [
            "FULL_SERVICE",
            "MULTI_UNIT_NON_PR",
            "POST_DECEMBER_2023"
          ]
        },
        "unitListings": {
          "$ref": "#/definitions/unitListings"
        }
      },
      "required": [
        "brand",
        "location",
        "numberOfUnits",
        "category"
      ]
    }
  },
  "required": [
    "strataHotelRepresentatives",
    "strataHotelDetails",
    "businessDetails"
  ]
}
